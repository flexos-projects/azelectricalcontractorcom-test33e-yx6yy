---

<footer class="bg-backgroundDark text-textMuted font-['Open Sans'] py-12 px-4">
  <div class="container mx-auto grid grid-cols-1 md:grid-cols-4 gap-8">
    <!-- Brand Name / Logo -->
    <div class="md:col-span-1">
      <h3 class="text-secondary font-['Inter'] text-2xl font-bold mb-4">Expert Electrical Services</h3>
      <p class="text-sm">Powering Homes & Businesses with Precision in Glendale, AZ.</p>
    </div>

    <!-- Navigation Links -->
    <div class="md:col-span-1">
      <h4 class="text-secondary font-['Inter'] text-lg font-semibold mb-4">Quick Links</h4>
      <ul class="space-y-2">
        {navItems.map(item => (
          <li>
            <a href={item.href} class="hover:text-accent transition-colors duration-200">{item.name}</a>
          </li>
        ))}
      </ul>
    </div>

    <!-- Contact Information -->
    <div class="md:col-span-1">
      <h4 class="text-secondary font-['Inter'] text-lg font-semibold mb-4">Contact Us</h4>
      <address class="not-italic space-y-2">
        <p>123 Main St, Glendale, AZ 85301</p>
        <p><a href="tel:+16235551234" class="hover:text-accent transition-colors duration-200">(623) 555-1234</a></p>
        <p><a href="mailto:info@expertelectrical.com" class="hover:text-accent transition-colors duration-200">info@expertelectrical.com</a></p>
      </address>
    </div>

    <!-- Social Media Links -->
    <div class="md:col-span-1">
      <h4 class="text-secondary font-['Inter'] text-lg font-semibold mb-4">Follow Us</h4>
      <div class="flex space-x-4">
        {socialLinks.map(link => (
          <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.name} class="text-textMuted hover:text-accent transition-colors duration-200">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
              <path d={link.icon}></path>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </div>

  <!-- Copyright Information -->
  <div class="container mx-auto mt-12 pt-8 border-t border-border text-center text-sm">
    <p>&copy; {currentYear} Expert Electrical Services. All rights reserved.</p>
  </div>
</footer>