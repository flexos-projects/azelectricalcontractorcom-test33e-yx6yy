---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Button from '@/components/Button.astro';

const content = {
  "homepage": {
    "heroHeadline": "Expert Electrical Services in Glendale, AZ: Powering Homes & Businesses with Precision",
    "heroSubheadline": "From intricate wiring fixes to cutting-edge smart home automation, Westgate Enterprises, LLC delivers unparalleled electrical solutions designed for safety, efficiency, and your complete satisfaction. Experience the difference of local expertise.",
    "heroCTA": "Request a Free Quote Today",
    "valueProps": [
      {
        "title": "Unrivaled Customer Service",
        "description": "Our dedication to client satisfaction is second to none. We listen, understand your needs, and ensure every interaction is professional, courteous, and focused on your peace of mind.",
        "icon": "star"
      },
      {
        "title": "Expert Craftsmanship Guaranteed",
        "description": "With deep experience and a commitment to quality, we tackle every project, from minor repairs to complex installations, ensuring the job is done right the first time, every time.",
        "icon": "tools"
      },
      {
        "title": "Transparent & Flexible Solutions",
        "description": "We provide comprehensive consultations, outlining all your available options. You'll have the clarity to choose the services that perfectly align with your vision and budget.",
        "icon": "clipboard-list"
      },
      {
        "title": "State-of-the-Art Technology",
        "description": "Stay ahead with modern electrical solutions, including advanced smart home automation, energy-efficient upgrades, and future-ready installations for your property.",
        "icon": "lightbulb"
      }
    ],
    "howItWorks": [
      {
        "step": 1,
        "title": "Connect & Consult",
        "description": "Contact us to schedule your comprehensive consultation. We'll discuss your electrical needs, whether it's a repair, upgrade, or new installation, and provide expert insights."
      },
      {
        "step": 2,
        "title": "Tailored Solutions & Quote",
        "description": "Based on our discussion, we'll present clear, flexible options and a detailed, no-obligation quote. You choose the scope of work that best suits your requirements and budget."
      },
      {
        "step": 3,
        "title": "Expert Execution",
        "description": "Our licensed electricians meticulously execute the approved work, utilizing the highest quality parts and equipment, ensuring safety, efficiency, and adherence to all codes."
      },
      {
        "step": 4,
        "title": "Guaranteed Satisfaction",
        "description": "We don't consider the job complete until you are 100% satisfied with our work. Enjoy reliable, long-lasting electrical solutions and complete peace of mind."
      }
    ],
    "benefitsSection": {
      "headline": "Why Glendale Chooses Westgate Enterprises, LLC for Superior Electrical Work",
      "benefits": [
        {
          "title": "Enhanced Safety for Your Property",
          "description": "Our meticulous electrical installations and repairs significantly reduce risks, protecting your home or business from hazards like fires and electrical shocks.",
          "image": "https://img1.wsimg.com/isteam/stock/27683/:/rs=w:223,h:223,cg:true,m/cr=w:223,h:223",
          "alt": "Stock image illustrating 'Reliable Electricians' section, showing a person working on electrical wiring."
        },
        {
          "title": "Optimized Energy Efficiency",
          "description": "Upgrade to modern, energy-saving electrical systems that lower your utility bills and reduce your environmental footprint, all while improving performance.",
          "image": "https://img1.wsimg.com/isteam/stock/26849/:/rs=w:223,h:223,cg:true,m/cr=w:223,h:223",
          "alt": "Stock image illustrating 'Flexible Services' section, showing a person reviewing plans or blueprints."
        },
        {
          "title": "Seamless Smart Home Integration",
          "description": "Transform your living or workspace with cutting-edge smart home technology, offering convenience, security, and control at your fingertips.",
          "image": "https://img1.wsimg.com/isteam/stock/27677/:/rs=w:223,h:223,cg:true,m/cr=w:223,h:223",
          "alt": "Stock image illustrating 'Customer Satisfaction Guaranteed' section, showing a handshake."
        }
      ]
    },
    "ctaSection": {
      "headline": "Ready to Power Up Your Property?",
      "subheadline": "Contact Westgate Enterprises, LLC today for a free consultation and discover the difference professional electrical services can make.",
      "cta": "Get Your Free Estimate"
    }
  }
};
---

<Layout title="Home" seoTitle="Westgate Enterprises, LLC" seoDescription="Specializing in residential and commercial electrical services, Westgate Enterprises, LLC is dedicated to providing customer service that is second to none. Whe">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="relative bg-primary text-secondary py-20 md:py-32 overflow-hidden">
      <div class="absolute inset-0 z-0 opacity-20">
        <img src="https://img1.wsimg.com/isteam/stock/10705/:/rs=w:1440,h:810,cg:true,m/cr=w:1440,h:810" alt="Electrical wiring background pattern" class="w-full h-full object-cover" loading="eager" />
      </div>
      <div class="container mx-auto px-4 relative z-10 text-center">
        <h1 class="font-headings text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight mb-6">
          {content.homepage.heroHeadline}
        </h1>
        <p class="font-body text-lg md:text-xl max-w-3xl mx-auto mb-10">
          {content.homepage.heroSubheadline}
        </p>
        <Button variant="accent" size="large" href="#contact">
          {content.homepage.heroCTA}
        </Button>
      </div>
    </section>

    <!-- Value Propositions Section -->
    <section id="services" class="bg-backgroundLight py-16 md:py-24">
      <div class="container mx-auto px-4">
        <h2 class="font-headings text-3xl md:text-4xl font-bold text-textPrimary text-center mb-12">Our Commitment to Excellence</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {content.homepage.valueProps.map((prop) => (
            <div class="bg-white p-8 shadow-sm text-center">
              <div class="text-accent mb-4">
                {/* Simple icon placeholder - in a real app, this would be an SVG component */}
                <svg class="h-12 w-12 mx-auto" fill="currentColor" viewBox="0 0 24 24">
                  {prop.icon === 'star' && <path d="M12 .587l3.668 7.568 8.332 1.151-6.064 5.828 1.48 8.279L12 18.896l-7.416 3.917 1.48-8.279-6.064-5.828 8.332-1.151L12 .587z"/>}
                  {prop.icon === 'tools' && <path d="M22.72 13.06l-2.02-2.02c-.39-.39-1.02-.39-1.41 0l-2.02 2.02-1.41-1.41 2.02-2.02c.39-.39.39-1.02 0-1.41l-2.02-2.02 1.41-1.41 2.02 2.02c.39.39 1.02.39 1.41 0l2.02-2.02 1.41 1.41-2.02 2.02c-.39.39-.39 1.02 0 1.41l2.02 2.02-1.41 1.41zm-10.42 6.09l-1.41-1.41 2.02-2.02c.39-.39.39-1.02 0-1.41l-2.02-2.02 1.41-1.41 2.02 2.02c.39.39 1.02.39 1.41 0l2.02-2.02 1.41 1.41-2.02 2.02c-.39.39-.39 1.02 0 1.41l2.02 2.02-1.41 1.41-2.02-2.02c-.39-.39-1.02-.39-1.41 0l-2.02 2.02zm-5.06-5.06l-1.41-1.41 2.02-2.02c.39-.39.39-1.02 0-1.41l-2.02-2.02 1.41-1.41 2.02 2.02c.39.39 1.02.39 1.41 0l2.02-2.02 1.41 1.41-2.02 2.02c-.39.39-.39 1.02 0 1.41l2.02 2.02-1.41 1.41-2.02-2.02c-.39-.39-1.02-.39-1.41 0l-2.02 2.02zM3 17.5c0 1.38 1.12 2.5 2.5 2.5s2.5-1.12 2.5-2.5-1.12-2.5-2.5-2.5-2.5 1.12-2.5 2.5z"/>}
                  {prop.icon === 'clipboard-list' && <path d="M15 2H9c-1.103 0-2 .897-2 2v16c0 1.103.897 2 2 2h6c1.103 0 2-.897 2-2V4c0-1.103-.897-2-2-2zm0 18H9V4h6v16zM9 8h6v2H9zm0 4h6v2H9zm0 4h6v2H9z"/>}
                  {prop.icon === 'lightbulb' && <path d="M9 21c0 .55.45 1 1 1h4c.55 0 1-.45 1-1v-1H9v1zm3-19C8.69 2 6 4.69 6 8c0 2.5 1.23 4.74 3.22 6.13.38.27.78.53 1.2.77.42.24.85.47 1.28.68.43.21.87.41 1.3.59.43.18.87.35 1.3.51.43.16.87.3 1.3.42.43.12.87.21 1.3.28.43.07.87.12 1.3.14.43.02.87.03 1.3.03.43 0 .87-.01 1.3-.03.43-.02.87-.07 1.3-.14.43-.07.87-.16 1.3-.28.43-.12.87-.26 1.3-.42.43-.16.87-.33 1.3-.51.43-.18.87-.38 1.28-.59.43-.21.83-.47 1.2-.77C22.77 12.74 24 10.5 24 8c0-3.31-2.69-6-6-6H6zm1 16h-2v-2h2v2z"/>}
                </svg>
              </div>
              <h3 class="font-headings text-xl font-semibold text-textPrimary mb-2">{prop.title}</h3>
              <p class="font-body text-textSecondary">{prop.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- About Section (Benefits) -->
    <section id="about" class="bg-primary text-secondary py-16 md:py-24">
      <div class="container mx-auto px-4">
        <h2 class="font-headings text-3xl md:text-4xl font-bold text-center mb-12">
          {content.homepage.benefitsSection.headline}
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {content.homepage.benefitsSection.benefits.map((benefit) => (
            <div class="bg-primary text-secondary p-6 text-center">
              <img src={benefit.image} alt={benefit.alt} class="w-32 h-32 mx-auto mb-6 object-cover" loading="lazy" />
              <h3 class="font-headings text-xl font-semibold mb-2">{benefit.title}</h3>
              <p class="font-body text-textMuted">{benefit.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section id="how-it-works" class="bg-backgroundLight py-16 md:py-24">
      <div class="container mx-auto px-4">
        <h2 class="font-headings text-3xl md:text-4xl font-bold text-textPrimary text-center mb-12">Our Simple Process</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {content.homepage.howItWorks.map((step) => (
            <div class="bg-white p-8 shadow-sm text-center">
              <div class="text-accent text-5xl font-extrabold mb-4">{step.step}</div>
              <h3 class="font-headings text-xl font-semibold text-textPrimary mb-2">{step.title}</h3>
              <p class="font-body text-textSecondary">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action Section -->
    <section id="contact" class="bg-accent text-secondary py-16 md:py-24 text-center">
      <div class="container mx-auto px-4">
        <h2 class="font-headings text-3xl md:text-4xl font-bold mb-4">
          {content.homepage.ctaSection.headline}
        </h2>
        <p class="font-body text-lg md:text-xl max-w-3xl mx-auto mb-8">
          {content.homepage.ctaSection.subheadline}
        </p>
        <Button variant="secondary" size="large" href="#contact-form"> {/* Assuming a contact form or section below */}
          {content.homepage.ctaSection.cta}
        </Button>
      </div>
    </section>
  </main>

  <Footer />
</Layout>