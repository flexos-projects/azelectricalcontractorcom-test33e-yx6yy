---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Expert Electrical Services in Glendale, AZ: Powering Homes & Businesses with Precision' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body class="font-['Open_Sans'] text-textPrimary bg-backgroundLight">
    <slot />
  </body>
</html>
<style is:global>
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Inter', sans-serif;
  }
</style>